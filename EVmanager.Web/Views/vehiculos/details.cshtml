<h2>Detalles del Vehículo</h2>
<ul>
    <li><strong>Placa:</strong> <span id="Placa"></span></li>
    <li><strong>Modelo:</strong> <span id="Modelo"></span></li>
    <li><strong>Nivel Batería:</strong> <span id="NivelBateria"></span></li>
</ul>
<a href="/Vehiculos/Index" class="btn btn-secondary">Volver</a>

<script>
    async function loadVehiculoDetails(id) {
        const response = await fetch(`https://localhost:7252/api/Vehiculos/${id}`);
        const vehiculo = await response.json();
        document.getElementById("Placa").innerText = vehiculo.placa;
        document.getElementById("Modelo").innerText = vehiculo.modelo;
        document.getElementById("NivelBateria").innerText = vehiculo.nivelBateria;
    }
    const id = new URLSearchParams(window.location.search).get("id");
    loadVehiculoDetails(id);
</script>