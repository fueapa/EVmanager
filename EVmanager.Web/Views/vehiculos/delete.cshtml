@model EVManager.Domain.Vehiculo

<h2>Eliminar Vehículo</h2>
<h3>¿Estás seguro de eliminar este vehículo?</h3>
<dl class="row">
    <dt class="col-sm-2">Placa</dt>
    <dd class="col-sm-10">@Model.Placa</dd>
    <dt class="col-sm-2">Modelo</dt>
    <dd class="col-sm-10">@Model.Modelo</dd>
    <dt class="col-sm-2">Nivel Batería</dt>
    <dd class="col-sm-10">@Model.NivelBateria</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
    <a asp-action="Index">Cancelar</a>
</form>